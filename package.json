{
  "name": "microfrontend-boilerplate",
  "private": true,
  "workspaces": [
    "host",
    "remote/products",
    "remote/cart"
  ],
  "scripts": {
    "start": "npm-run-all --parallel start:host start:products start:cart",
    "start:host": "npm --prefix host start",
    "start:products": "npm --prefix remote/products start",
    "start:cart": "npm --prefix remote/cart start",
    "build": "npm install && npm build:all && npm run prepare-deploy",
    "build:all": "npm-run-all build:host build:products build:cart",
    "build:host": "npm --prefix host run build",
    "build:products": "npm --prefix remote/products run build",
    "build:cart": "npm --prefix remote/cart run build",
    "prepare-deploy": "node deploy.js"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}
